<%= simple_form_for([:admin, @question]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content, label: "Κείμενο" %>
    <%= f.input :weight, label: "Πόντοι", input_html: { class: "sm" } %>
  </div>

  <hr>

  <div class="panel panel-info">
    <div class="panel-heading">Κριτήρια για την εμφάνιση της ερώτησης</div>
    <div class="panel-body">
      <%= render :partial => '/shared/criteria' %>
    </div>
  </div>
  <div class="form-actions">
    <% if @question.new_record? %>
      <%= link_to 'Επιστροφή', admin_questions_path, :class => 'btn btn-warning' %>
      <button class='btn btn-primary'>Δημιουργία</button>
    <% else %>
      <%= link_to 'Επιστροφή', [:admin, @question], :class => 'btn btn-warning' %>
      <button class='btn btn-primary'>Αποθήκευση</button>
    <% end %>
  </div>

<% end %>
