<%= simple_form_for([:admin, @question]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :weight %>
    <%= f.association :admin %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-default' %>

    <% if @question.new_record? %>
      <%= link_to 'Back', admin_questions_path, :class => 'btn btn-warning' %>
    <% else %>
      <%= link_to 'Edit', edit_admin_question_path(@question), :class => 'btn btn-info' %> |
      <%= link_to 'Cancel', admin_questions_path, :class => 'btn btn-warning' %>
    <% end %>
  </div>
<% end %>
