<%= simple_form_for([:merchant, @ad]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :site_url %>
    <%= f.input :img_url %>
    <%= f.input :video_url %>
    <%#= f.association :merchant %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
